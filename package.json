{
  "name": "swarna-pms",
  "productName": "Swarna Villa PMS",
  "version": "2.0.0",  
  "description": "Property Management System for Swarna Villa",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "Swarna Villa",
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^6.1.4",
    "html2pdf.js": "^0.10.1",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.swarnavilla.pms",
    "productName": "Swarna Villa PMS",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/Icon.PNG",
      "requestedExecutionLevel": "asInvoker" 
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Swarna Villa PMS",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}